# ===========================================
# Paperless-ngx Configuration
# ===========================================

# --- Docker Images ---
PAPERLESS_IMAGE=ghcr.io/paperless-ngx/paperless-ngx:latest
POSTGRES_IMAGE=postgres:16-alpine
REDIS_IMAGE=redis:7-alpine

# --- Container Names ---
PAPERLESS_CONTAINER_NAME=paperless-webserver
DB_CONTAINER_NAME=paperless-db
REDIS_CONTAINER_NAME=paperless-redis

# --- Network Names ---
INTERNAL_NETWORK_NAME=paperless_internal
TRAEFIK_NETWORK_NAME=traefik_default

# --- Volume Names ---
DB_VOLUME_NAME=paperless_db-data
REDIS_VOLUME_NAME=paperless_redis-data

# --- Traefik Configuration ---
PAPERLESS_HOST=paperless.yourdomain.com
TRAEFIK_CERTRESOLVER=myresolver

# --- Database Configuration ---
POSTGRES_DB=paperless
POSTGRES_USER=paperless
POSTGRES_PASSWORD=change-me-to-strong-password

# --- Security (REQUIRED!) ---
# Generate with: python3 -c 'import secrets; print(secrets.token_urlsafe(50))'
PAPERLESS_SECRET_KEY=change-me-to-very-long-random-string

# --- Admin User (created on first run) ---
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=change-me-to-admin-password
PAPERLESS_ADMIN_MAIL=admin@yourdomain.com

# --- User/Group IDs ---
# Run 'id' command on your system to get these values
USERMAP_UID=1000
USERMAP_GID=1000

# --- Timezone & Language ---
PAPERLESS_TIME_ZONE=UTC
PAPERLESS_OCR_LANGUAGE=eng
# Additional OCR languages (space-separated): deu fra spa ita rus
PAPERLESS_OCR_LANGUAGES=

# --- Document Storage Paths ---
# IMPORTANT: These can be VeraCrypt encrypted volumes
# Mount your encrypted volume, then point these paths to it
PAPERLESS_DATA_DIR=./data
PAPERLESS_MEDIA_DIR=./media
PAPERLESS_EXPORT_DIR=./export
PAPERLESS_CONSUME_DIR=./consume

# --- OAuth2 / SSO Integration ---
# When using OAuth2-proxy forward-auth:
# Set PAPERLESS_AUTO_LOGIN_USERNAME to automatically log in users
# The username should match what OAuth2-proxy sends in X-Forwarded-User header
PAPERLESS_DISABLE_REGULAR_LOGIN=false
PAPERLESS_AUTO_LOGIN_USERNAME=
PAPERLESS_COOKIE_PREFIX=

# --- OCR Configuration ---
# Options: skip, redo, force
PAPERLESS_OCR_MODE=skip
# Options: never, with_text, always
PAPERLESS_OCR_SKIP_ARCHIVE_FILE=never

# --- Consumer Configuration ---
# Enable for NFS shares (set to number of seconds between polls)
PAPERLESS_CONSUMER_POLLING=0
# Process subdirectories in consume folder
PAPERLESS_CONSUMER_RECURSIVE=false
# Use subdirectory names as tags
PAPERLESS_CONSUMER_SUBDIRS_AS_TAGS=false
